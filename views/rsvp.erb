<%= erb :header %>

<div class="row">
	<div class="large-6 medium-8 large-offset-3 medium-offset-2 columns end">
    <p>Please enter the ticket number from your boarding pass/invitation to continue.</p>
    <% if !@message.nil? %>
      <div data-alert class="alert-box alert radius">
        <%= @message %>
        <a href="#" class="close">&times;</a>
      </div>
    <% end %>
		<form action="/login" method="POST" id="ticket_entry">
	    	<input type="tel" name="ticket_number" id="ticket_number" placeholder="Ticket number" />
	  	<input type="submit" value="Continue" class="button radius success expand"/>
    </form>
  </div>
</div>

<script type="text/javascript" language="JavaScript">
	document.forms['ticket_entry'].elements['ticket_number'].focus();
</script>
